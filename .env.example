# 🔑 API Configuration
# Copy this file to .env and fill in your actual values

# 🤖 Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here

# 🎨 Gemini Models Configuration
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image-preview
GEMINI_TEXT_MODEL=gemini-2.5-flash-lite

# 🌤️ Weather API Configuration
WEATHER_API_BASE_URL=https://your-weather-api-domain.com
WEATHER_API_KEY=your_weather_api_key_here

# 📍 Default coordinates (Hanoi, Vietnam)
DEFAULT_LATITUDE=21.0285
DEFAULT_LONGITUDE=105.8542

# ⚙️ API Configuration
WEATHER_API_UNITS=m
WEATHER_API_LANGUAGE=vi-VN

# 🎨 Icon Generator Configuration
ICON_OUTPUT_DIR=generated_icons
ICON_SIZE=512
ICON_STYLE=modern
ICON_FORMAT=png

# 📁 Scripts Configuration
SCRIPTS_DIR=scripts
ENABLE_LOGGING=true
LOG_LEVEL=INFO